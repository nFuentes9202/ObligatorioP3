@model MVC.Models.AsignarEspecieViewModel

<h1>Asignar Especie a Ecosistema</h1>

<form method="post" asp-action="AsignarEspecie">
    <div class="form-group">
        <label for="EspecieId">Especie:</label>
        <select asp-for="EspecieId" asp-items="Model.Especies"></select>
    </div>

    <div class="form-group">
        <label for="EcosistemaId">Ecosistema:</label>
        <select asp-for="EcosistemaId" asp-items="Model.Ecosistemas"></select>
    </div>

    <button type="submit" class="btn btn-primary">Asignar</button>
</form>

<p id="pResultado"></p>