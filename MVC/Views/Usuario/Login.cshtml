<main class="form-signin h-auto m-auto">
    <form method="post" id="formLogin">

        <h1 class="h3 mb-3 fw-normal">Inicie sesión</h1>

        <div class="form-floating">
            <input value="AdminUser" name="alias" type="text" class="form-control" id="floatingInput" placeholder="JuanJose">
            <label for="floatingInput">Alias</label>
        </div>
        <div class="form-floating">
            <input value="UserPasswordPlainText" name="password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
            <label for="floatingPassword">Password</label>
        </div>

        <button class="btn btn-primary w-100 py-2" type="submit">Login</button>
        <p id="pLogin"></p>
        <p>@ViewBag.MensajeLogin</p>
    </form>
    <div class="cosas">
    </div>


</main>